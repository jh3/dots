function! Fullscreen()
	set columns=271
	set lines=82
endfunction

function! Halfscreen()
	set columns=135
	set lines=82
endfunction

function! Normalscreen()
	set columns=89
	set lines=82
endfunction

" OS Specific 
if has("gui_macvim")
  " fullscreen options (MacVim only), resized window when changed to fullscreen
	call Normalscreen()
  set fuoptions=maxvert,maxhorz 
  "set guifont=Monaco:h13
  "set guifont=ProggyClean:h11
	set guifont=Inconsolata:h14
  set guioptions-=T  " remove toolbar
	" Remove the scrollbars
	set guioptions+=LlRrb
	set guioptions-=LlRrb
  set stal=2 " turn on tabs by default
	set relativenumber
	set textwidth=79
	set colorcolumn=85
  colorscheme mac_classic
elseif has("gui_gtk2")
  set guifont=Monaco
elseif has("x11")
elseif has("gui_win32")
end

" Disable the intro message
set shortmess+=I

" General 
set anti " Antialias font
"set transparency=0

" Tab headings 
set gtl=%t gtt=%F
